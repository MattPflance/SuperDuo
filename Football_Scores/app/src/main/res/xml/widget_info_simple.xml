<?xml version="1.0" encoding="utf-8"?>
<!-- Update scores widget every hour -->
<appwidget-provider xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:initialLayout="@layout/widget_simple_small"
    android:minHeight="@dimen/widget_simple_default_height"
    android:minWidth="@dimen/widget_simple_default_width"
    android:minResizeHeight="@dimen/widget_simple_min_resize_height"
    android:minResizeWidth="@dimen/widget_simple_min_resize_width"
    android:previewImage="@drawable/widget_preview_simple"
    android:resizeMode="horizontal"
    android:updatePeriodMillis="1800000"
    tools:ignore="UnusedAttribute" />